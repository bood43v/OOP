<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.FirstPage"
             Title="First Page">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="Entry1"
                FontAttributes="Bold"
                Placeholder="Введите что-нибудь"></Entry>
            <Button Text="Push me!" Clicked="Button1_Click"></Button>
            <Label
                x:Name="Label1"
                FontSize="30"
                Text="Hello!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>